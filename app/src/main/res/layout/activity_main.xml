<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="57dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:numeric="integer"
        app:layout_constraintBaseline_toBaselineOf="@+id/number2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="24dp"
        android:layout_height="46dp"
        android:layout_marginStart="92dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/Badd"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Badd"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onaddClick"
        android:text="LASKE"
        app:layout_constraintEnd_toStartOf="@+id/result"
        app:layout_constraintStart_toEndOf="@+id/number2"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="56dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Badd"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="99dp" />

    <EditText
        android:id="@+id/number3"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:numeric="integer"
        app:layout_constraintBaseline_toBaselineOf="@+id/number4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="26dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/number4"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bsub"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Bsub"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onaddClick"
        android:text="LASKE"
        app:layout_constraintEnd_toStartOf="@+id/result2"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintTop_toBottomOf="@+id/Badd" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="56dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bsub"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/number5"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/number6"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="25dp"
        android:layout_height="53dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="none"
        android:text="*"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <EditText
        android:id="@+id/number6"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bmul"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Bmul"
        android:layout_width="70dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onaddClick"
        android:text="LASKE"
        app:layout_constraintEnd_toStartOf="@+id/result3"
        app:layout_constraintStart_toEndOf="@+id/number6"
        app:layout_constraintTop_toBottomOf="@+id/Bsub" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bmul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Bmul" />

    <EditText
        android:id="@+id/number7"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/number8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextView7"
        android:layout_width="25dp"
        android:layout_height="46dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="/"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="/" />

    <EditText
        android:id="@+id/number8"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bdiv"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Bdiv"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="27dp"
        android:onClick="onaddClick"
        android:text="LASKE"
        app:layout_constraintEnd_toStartOf="@+id/result4"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintTop_toBottomOf="@+id/Bmul" />

    <TextView
        android:id="@+id/result4"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bdiv"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>